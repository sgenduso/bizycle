extends layout

block content
  h1= title
  div.add-job
    if loggedIn
      a(id="add-job" href='/add') Post a job to the board
      if jobs 
        each job in jobs
          .newJob
            .left
              a(href=job.source)
                h1= job.jobTitle
              p= job.companyName
            .right
              p= job.location
              p Date Posted
                = job.activation
            .bottom
              p= job.description
              p= job.source
            
            
    if userId
      a(id="add-job" href='/newjob') Post a job to the board
    else
      div
        p(id="not-logged-in") Post a job to the board
        include ./partials/authModal.jade
